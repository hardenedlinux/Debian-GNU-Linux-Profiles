(defun gtrun-org/post-init-org-pomodoro ()
  (progn
    (add-hook 'org-pomodoro-finished-hook '(lambda () (gtrun/growl-notification "Pomodoro Finished" "â˜•ï¸ Have a break!" t)))
    (add-hook 'org-pomodoro-short-break-finished-hook '(lambda () (gtrun/growl-notification "Short Break" "ğŸ Ready to Go?" t)))
    (add-hook 'org-pomodoro-long-break-finished-hook '(lambda () (gtrun/growl-notification "Long Break" " ğŸ’ª Ready to Go?" t)))
    ))

(defun gtrun-org/post-init-org ()
  (add-hook 'org-mode-hook (lambda () (spacemacs/toggle-line-numbers-off)) 'append)
  (with-eval-after-load 'org
    (progn
      ;; https://github.com/syl20bnr/spacemacs/issues/2994#issuecomment-139737911
      ;; (when (configuration-layer/package-usedp 'company)
      ;;   (spacemacs|add-company-hook org-mode))


      ;;(require org-bullets)
      (add-hook 'org-mode-hook (lambda () (org-bullets-mode 1)))
      ;; (setq org-bullets-bullet-list '("â—‰" "â—‹ ""â–º" "â€¢" "â€¢"))
      (setq org-bullets-bullet-list '("âŠ¢" "â‹®" "â‹±" "â‹±" "â‹±"))

      (spacemacs|disable-company org-mode)
      (spacemacs/set-leader-keys-for-major-mode 'org-mode
        "," 'org-priority)
      (require 'org-compat)
      (require 'org)
      ;; (add-to-list 'org-modules "org-habit")
      (add-to-list 'org-modules 'org-habit)
      (require 'org-habit)

      (setq org-refile-use-outline-path 'fil)
      (setq org-outline-path-complete-in-steps nil)
      (setq org-refile-targets
            '((nil :maxlevel . 4)
              (org-agenda-files :maxlevel . 4)))
      ;; config stuck project
      (setq org-stuck-projects
            '("TODO={.+}/-DONE" nil nil "SCHEDULED:\\|DEADLINE:"))

      (setq org-agenda-inhibit-startup t)   ;; ~50x speedup
      (setq org-agenda-use-tag-inheritance nil) ;; 3-4x speedup
      (setq org-agenda-window-setup 'current-window)
      (setq org-log-done t)

      ;; åŠ å¯†æ–‡ç« 
      ;; "http://coldnew.github.io/blog/2013/07/13_5b094.html"
      ;; org-mode è¨­å®š
      (require 'org-crypt)

      ;; ç•¶è¢«åŠ å¯†çš„éƒ¨ä»½è¦å­˜å…¥ç¡¬ç¢Ÿæ™‚ï¼Œè‡ªå‹•åŠ å¯†å›å»
      (org-crypt-use-before-save-magic)

      ;; è¨­å®šè¦åŠ å¯†çš„ tag æ¨™ç±¤ç‚º secret
      (setq org-crypt-tag-matcher "secret")

      ;; é¿å… secret é€™å€‹ tag è¢«å­é …ç›®ç¹¼æ‰¿ é€ æˆé‡è¤‡åŠ å¯†
      ;; (ä½†æ˜¯å­é …ç›®é‚„æ˜¯æœƒè¢«åŠ å¯†å–”)
      (setq org-tags-exclude-from-inheritance (quote ("secret")))

      ;; ç”¨æ–¼åŠ å¯†çš„ GPG é‡‘é‘°
      ;; å¯ä»¥è¨­å®šä»»ä½• ID æˆ–æ˜¯è¨­æˆ nil ä¾†ä½¿ç”¨å°ç¨±å¼åŠ å¯† (symmetric encryption)
      (setq org-crypt-key nil)

      ;; (add-to-list 'auto-mode-alist '("\.org\\'" . org-mode))

      (setq org-todo-keywords
            (quote ((sequence "TODO(t)" "STARTED(s)" "|" "DONE(d!/!)")
                    (sequence "WAITING(w@/!)" "SOMEDAY(S)" "|" "CANCELLED(c@/!)" "MEETING(m)" "PHONE(p)"))))
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
      ;; Org clock
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

      ;; Change task state to STARTED when clocking in
      (setq org-clock-in-switch-to-state "STARTED")
      ;; Save clock data and notes in the LOGBOOK drawer
      (setq org-clock-into-drawer t)
      ;; Removes clocked tasks with 0:00 duration
      (setq org-clock-out-remove-zero-time-clocks t) ;; Show the clocked-in task - if any - in the header line

      (setq org-tags-match-list-sublevels nil)

      (add-hook 'org-mode-hook '(lambda ()
                                  ;; keybinding for editing source code blocks
                                  ;; keybinding for inserting code blocks
                                  (local-set-key (kbd "C-c i s")
                                                 'gtrun/org-insert-src-block)))
      (require 'ox-publish)
      (add-to-list 'org-latex-classes '("ctexart" "\\documentclass[11pt]{ctexart}
                                        [NO-DEFAULT-PACKAGES]
                                        \\usepackage[utf8]{inputenc}
                                        \\usepackage[T1]{fontenc}
                                        \\usepackage{fixltx2e}
                                        \\usepackage{graphicx}
                                        \\usepackage{longtable}
                                        \\usepackage{float}
                                        \\usepackage{wrapfig}
                                        \\usepackage{rotating}
                                        \\usepackage[normalem]{ulem}
                                        \\usepackage{amsmath}
                                        \\usepackage{textcomp}
                                        \\usepackage{marvosym}
                                        \\usepackage{wasysym}
                                        \\usepackage{amssymb}
                                        \\usepackage{booktabs}
                                        \\usepackage[colorlinks,linkcolor=black,anchorcolor=black,citecolor=black]{hyperref}
                                        \\tolerance=1000
                                        \\usepackage{listings}
                                        \\usepackage{xcolor}
                                        \\lstset{
                                        %è¡Œå·
                                        numbers=left,
                                        %èƒŒæ™¯æ¡†
                                        framexleftmargin=10mm,
                                        frame=none,
                                        %èƒŒæ™¯è‰²
                                        %backgroundcolor=\\color[rgb]{1,1,0.76},
                                        backgroundcolor=\\color[RGB]{245,245,244},
                                        %æ ·å¼
                                        keywordstyle=\\bf\\color{blue},
                                        identifierstyle=\\bf,
                                        numberstyle=\\color[RGB]{0,192,192},
                                        commentstyle=\\it\\color[RGB]{0,96,96},
                                        stringstyle=\\rmfamily\\slshape\\color[RGB]{128,0,0},
                                        %æ˜¾ç¤ºç©ºæ ¼
                                        showstringspaces=false
                                        }
                                        "
                                        ("\\section{%s}" . "\\section*{%s}")
                                        ("\\subsection{%s}" . "\\subsection*{%s}")
                                        ("\\subsubsection{%s}" . "\\subsubsection*{%s}")
                                        ("\\paragraph{%s}" . "\\paragraph*{%s}")
                                        ("\\subparagraph{%s}" . "\\subparagraph*{%s}")))

      ;; {{ export org-mode in Chinese into PDF
      ;; @see http://freizl.github.io/posts/tech/2012-04-06-export-orgmode-file-in-Chinese.html
      ;; and you need install texlive-xetex on different platforms
      ;; To install texlive-xetex:
      ;;    `sudo USE="cjk" emerge texlive-xetex` on Gentoo Linux
      ;; }}
      (setq org-latex-default-class "ctexart")
      (setq org-latex-pdf-process
            '(
              "xelatex -interaction nonstopmode -output-directory %o %f"
              "xelatex -interaction nonstopmode -output-directory %o %f"
              "xelatex -interaction nonstopmode -output-directory %o %f"
              "rm -fr %b.out %b.log %b.tex auto"))

      (setq org-latex-listings t)

      ;;reset subtask
      (setq org-default-properties (cons "RESET_SUBTASKS" org-default-properties))

      ;; (add-hook 'org-after-todo-state-change-hook 'org-subtask-reset)

      (setq org-plantuml-jar-path
            (expand-file-name "~/.emacs.d/plantuml.jar"))
      (setq org-ditaa-jar-path "~/.emacs.d/ditaa.jar")

      ;;https://emacs.stackexchange.com/questions/28441/org-mode-9-unable-to-eval-code-blocks   
      (org-babel-do-load-languages
       'org-babel-load-languages
       '(
         (shell . t)
         (dot . t)
         (latex .t)
         (python . t)
         (emacs-lisp . t)
         (plantuml . t)
         (C . t)
         (ditaa . t)))


      (require 'ox-md nil t)
      ;; copy from chinese layer
      (defadvice org-html-paragraph (before org-html-paragraph-advice
                                            (paragraph contents info) activate)
        "Join consecutive Chinese lines into a single long line without
unwanted space when exporting org-mode to html."
        (let* ((origin-contents (ad-get-arg 1))
               (fix-regexp "[[:multibyte:]]")
               (fixed-contents
                (replace-regexp-in-string
                 (concat
                  "\\(" fix-regexp "\\) *\n *\\(" fix-regexp "\\)") "\\1\\2" origin-contents)))
          (ad-set-arg 1 fixed-contents)))

      ;; define the refile targets
      
      (setq org-agenda-files
		    (list "~/org-notes/Task.org"
			      "~/org-notes/Habits.org"
			      "~/org-notes/myself.org"
			      "~/org-notes/Memo.org"))
      (setq org-default-notes-file "~/org-notes/notes.org")

      
      ;; the %i would copy the selected text into the template
      ;;http://www.howardism.org/Technical/Emacs/journaling-org.html
      ;;add multi-file journal
      (setq org-capture-templates
            '(("t" "Todo" entry (file+headline "~/org-notes/Task.org" "Workspace")
               "* TODO [#B] %?\n  %i\n"
               :empty-lines 1)
              ("n" "notes" entry (file+headline "~/org-notes/notes.org" "Quick notes")
               "* %?\n  %i\n %U"
               :empty-lines 1)
              ("b" "Blog Ideas" entry (file+headline "~/org-notes/notes.org" "Blog Ideas")
               "* TODO [#B] %?\n  %i\n %U"
               :empty-lines 1)
              ("s" "Code Snippet" entry
               (file "~/org-notes/snippets.org")
               "* %?\t%^g\n#+BEGIN_SRC %^{language}\n\n#+END_SRC"
              :empty-lines 1)
              ("L" "Chrome" entry (file+headline "~/org-notes/recent.org" "Quick notes")
               "* TODO [#C] %?\n %(zilongshanren/retrieve-chrome-current-tab-url)\n %i\n %U"
               :empty-lines 1)
              ("P "Chrome" entry (file+headline "~/org-notes/recent.org" "Quick notes")
               "* TODO [#C] %?\n %(zilongshanren/retrieve-chrome-current-tab-url)\n %i\n %U"
               :empty-lines 1)

              ("l" "links" entry (file+headline "~/org-notes/recent.org" "Quick notes")
               "* TODO [#C] %?\n  %i\n %a \n %U"
               :empty-lines 1)
              ("j" "Journal Entry"
               entry (file+datetree "~/org-notes/journal.org")
               "* %?"
               :empty-lines 1)))

      ;;An entry without a cookie is treated just like priority ' B '.
      ;;So when create new task, they are default é‡è¦ä¸”ç´§æ€¥
      (setq org-agenda-custom-commands
            '(
              ("w" . "ä»»åŠ¡å®‰æ’")
              ("wa" "é‡è¦ä¸”ç´§æ€¥çš„ä»»åŠ¡" tags-todo "+PRIORITY=\"A\"")
              ("wb" "é‡è¦ä¸”ä¸ç´§æ€¥çš„ä»»åŠ¡" tags-todo "-Weekly-Monthly-Daily+PRIORITY=\"B\"")
              ("wc" "ä¸é‡è¦ä¸”ç´§æ€¥çš„ä»»åŠ¡" tags-todo "+PRIORITY=\"C\"")
              ("b" "Blog" tags-todo "BLOG")
              ("p" . "é¡¹ç›®å®‰æ’")
              ("pw" tags-todo "PROJECT+WORK+CATEGORY=\"NSM\"")
              ("pl" tags-todo "PROJECT+DREAM+CATEGORY=\"GTruN\"")
              ("W" "Weekly Review"
               ((stuck "") ;; review stuck projects as designated by org-stuck-projects
                (tags-todo "PROJECT") ;; review all projects (assuming you use todo keywords to designate projects)
                ))))
      )      ))


